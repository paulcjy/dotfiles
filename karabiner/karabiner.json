{
    "global": { "show_in_menu_bar": false },
    "profiles": [
        {
            "complex_modifications": {
                "parameters": { "basic.to_delayed_action_delay_milliseconds": 50 },
                "rules": [
                    {
                        "description": "cmd + ctrl + [ ] 로 스페이스 전환",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "open_bracket",
                                    "modifiers": { "mandatory": ["command", "control"] }
                                },
                                "to": [
                                    {
                                        "key_code": "left_arrow",
                                        "modifiers": ["control"]
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "close_bracket",
                                    "modifiers": { "mandatory": ["command", "control"] }
                                },
                                "to": [
                                    {
                                        "key_code": "right_arrow",
                                        "modifiers": ["control"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Caps Lock을 단독으로 누르면 Escape, 다른 키와 함께 누르면 Control",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "left_control" }],
                                "to_after_key_up": [{ "select_input_source": { "language": "en" } }],
                                "to_if_alone": [{ "key_code": "escape" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "esc를 누를 때 입력 언어도 영어로 전환",
                        "manipulators": [
                            {
                                "from": { "key_code": "escape" },
                                "to": [{ "key_code": "escape" }],
                                "to_after_key_up": [{ "select_input_source": { "language": "en" } }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "한글 입력에서 원화 기호를 백틱으로 변경",
                        "enabled": false,
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "input_sources": [{ "language": "ko" }],
                                        "type": "input_source_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "grave_accent_and_tilde",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "key_code": "grave_accent_and_tilde",
                                        "modifiers": ["option"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "devices": [
                {
                    "identifiers": {
                        "is_keyboard": true,
                        "product_id": 34050,
                        "vendor_id": 2652
                    },
                    "simple_modifications": [
                        {
                            "from": { "key_code": "insert" },
                            "to": [{ "key_code": "vk_none" }]
                        },
                        {
                            "from": { "key_code": "right_option" },
                            "to": [{ "key_code": "f18" }]
                        }
                    ]
                }
            ],
            "name": "Default profile",
            "selected": true,
            "simple_modifications": [
                {
                    "from": { "key_code": "right_command" },
                    "to": [{ "key_code": "f18" }]
                }
            ],
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        }
    ]
}